{{#each erros}}
  <div class="alert alert-danger">    
    <strong>Erro!</strong> {{texto}}
  </div>
{{else}}

{{/each}}

<h3>Nova categoria</h3>
<div class="card">
  <div class="card-body">
    <form action="/admin/categorias/nova" method="post">
      <label class="mb-2" for="nome">Nome:</label>
        <input type="text" name="nome" placeholder="Nome da categoria" class="form-control" >
        <br>
      <label class="mb-2" for="slug">Slug:</label>
        <input type="text" name="slug" placeholder="Slug da categoria" class="form-control" >
        <br>
      <button type="submit" class="btn btn-success">Criar categoria</button>
    </form>
  </div>
</div>