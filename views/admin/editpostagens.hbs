<div class='card'>
  <div class='card-body'>
    <h4>Editar postagem:</h4>
    <form action='/admin/postagens/edit' method='post'>
      <input type='hidden' name='id' value='{{postagem._id}}' />
      <label for='titulo'>Título:</label>
      <input type='text' name='titulo' class='form-control mt-2' value='{{postagem.titulo}}' />
      <label for='slug'>Slug:</label>
      <input type='text' name='slug' class='form-control mt-2' value='{{postagem.slug}}' />
      <label for='descricao'>Descrição:</label>
      <input type='text' name='descricao' class='form-control mt-2' value='{{postagem.descricao}}' />
      <label for='conteudo'>Conteúdo:</label>
      <textarea name='conteudo' class='form-control mt-2'>{{postagem.conteudo}}</textarea>
      <label for='categoria'>Categoria:</label>
      <select name='categoria' class='form-select mt-2'>
        {{#each categorias}}
          <option value='{{_id}}'>{{nome}}</option>
        {{else}}
          <option value='0'>Nenhuma categoria cadastrada</option>
        {{/each}}
      </select>
      <button class='btn btn-success mt-4' type='submit'>Editar Postagem</button>
    </form>
  </div>
</div>